<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bgcolor"
        tools:context=".operation_manager.activity.OperationManagerBreakdownrequestDetailActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_marginRight="@dimen/marginleft"
                  android:layout_marginLeft="@dimen/marginleft"
                  android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:id="@+id/galleryrecyclerview"
                android:layout_height="80dp"/>
        <ScrollView android:layout_width="match_parent"
                    android:scrollbars="none"
                    android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_marginTop="2dp"
                                android:elevation="@dimen/elevtion"
                                android:layout_marginBottom="2dp"
                                android:backgroundTint="@color/white"
                                android:background="@drawable/drawable_edittext_style"
                                android:layout_height="wrap_content">
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="start"
                              android:id="@+id/requestId"
                              android:layout_marginLeft="@dimen/marginleft"
                              android:layout_marginStart="@dimen/marginleft"
                              android:textSize="@dimen/font_small"
                              android:layout_toStartOf="@+id/high"
                              android:layout_marginTop="@dimen/space_8"
                              android:layout_toLeftOf="@+id/high"
                              android:layout_marginEnd="@dimen/marginleft"
                              android:layout_marginRight="@dimen/marginleft"
                              android:textStyle="bold"
                              android:textColor="@android:color/black"
                              android:text="Request ID - 52476135"
                              android:fontFamily="sans-serif"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="start"
                              android:id="@+id/machineno"
                              android:layout_marginLeft="@dimen/marginleft"
                              android:layout_marginStart="@dimen/marginleft"
                              android:textSize="@dimen/font_small"
                              android:layout_marginTop="@dimen/elevtion"
                              android:layout_below="@+id/requestId"
                              android:layout_toStartOf="@+id/high"
                              android:layout_toLeftOf="@+id/high"
                              android:layout_marginEnd="@dimen/marginleft"
                              android:layout_marginRight="@dimen/marginleft"
                              android:textStyle="bold"
                              android:textColor="@color/colorPrimary"
                              android:text="Machine No - 52476135"
                              android:fontFamily="sans-serif"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="start"
                              android:id="@+id/comment"
                              android:layout_marginLeft="@dimen/marginleft"
                              android:layout_marginStart="@dimen/marginleft"
                              android:textSize="@dimen/font_small"
                              android:layout_below="@+id/machineno"
                              android:layout_marginEnd="@dimen/marginleft"
                              android:layout_marginRight="@dimen/marginleft"
                              android:textStyle="normal"
                              android:layout_marginBottom="@dimen/elevtion"
                              android:layout_marginTop="@dimen/elevtion"
                              android:textColor="@android:color/black"
                              android:text="Machine is not working properly"
                              android:fontFamily="sans-serif"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="start"
                              android:id="@+id/commentdescription"
                              android:textSize="@dimen/font_small"
                              android:layout_marginBottom="@dimen/elevtion"
                              android:layout_marginTop="@dimen/elevtion"
                              android:layout_below="@+id/comment"
                              android:layout_marginEnd="@dimen/marginleft"
                              android:layout_marginRight="@dimen/marginleft"
                              android:layout_marginLeft="@dimen/marginleft"
                              android:layout_marginStart="@dimen/marginleft"
                              android:textStyle="normal"
                              android:maxLines="2"
                              android:textColor="@color/activeTextColor"
                              android:text="Machine is not working properlyMachine is not working properlyMachine is not working properlyMachine is not working properly"
                              android:fontFamily="sans-serif"/>
                    <View android:layout_width="match_parent"
                          android:layout_marginTop="@dimen/elevtion"
                          android:layout_marginLeft="@dimen/marginleft"
                          android:layout_marginEnd="@dimen/marginleft"
                          android:layout_marginRight="@dimen/marginleft"
                          android:id="@+id/view"
                          android:layout_marginStart="@dimen/marginleft"
                          android:background="@color/inactiveTxtColor"
                          android:layout_below="@+id/commentdescription"
                          android:layout_height="1dp"/>
                    <TextView android:layout_width="match_parent"
                              android:text="Created Date : 10/02/2019, 04:18 "
                              android:layout_below="@+id/view"
                              android:fontFamily="sans-serif"
                              android:id="@+id/creat_date"
                              android:textSize="@dimen/font_small"
                              android:maxLines="1"
                              android:layout_marginTop="@dimen/elevtion"
                              android:layout_marginEnd="@dimen/marginleft"
                              android:layout_marginRight="@dimen/marginleft"
                              android:layout_marginLeft="@dimen/marginleft"
                              android:layout_marginStart="@dimen/marginleft"
                              android:textColor="@color/activeTextColor"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="match_parent"
                              android:text="Completion Date : 10/02/2019, 04:18 "
                              android:layout_below="@+id/creat_date"
                              android:fontFamily="sans-serif"
                              android:id="@+id/complete_date"
                              android:textSize="@dimen/font_small"
                              android:maxLines="1"
                              android:layout_marginTop="@dimen/elevtion"
                              android:layout_marginEnd="@dimen/marginleft"
                              android:layout_marginRight="@dimen/marginleft"
                              android:layout_marginLeft="@dimen/marginleft"
                              android:layout_marginStart="@dimen/marginleft"
                              android:textColor="@color/activeTextColor"
                              android:layout_height="wrap_content"/>

                    <TextView android:layout_width="match_parent"
                              android:text="Dhiraj Pandey"
                              android:layout_below="@+id/complete_date"
                              android:fontFamily="sans-serif"
                              android:id="@+id/name"
                              android:textSize="@dimen/font_small"
                              android:maxLines="1"
                              android:layout_marginEnd="@dimen/marginleft"
                              android:layout_marginRight="@dimen/marginleft"
                              android:layout_marginLeft="@dimen/marginleft"
                              android:layout_marginStart="@dimen/marginleft"
                              android:gravity="center_vertical"
                              android:drawableLeft="@drawable/user"
                              android:textColor="@color/activeTextColor"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="match_parent"
                              android:text="Suggested Part- bearing, roller, shaft"
                              android:layout_below="@+id/name"
                              android:fontFamily="sans-serif"
                              android:id="@+id/suggestedpart"
                              android:textSize="@dimen/font_small"
                              android:maxLines="1"
                              android:layout_marginBottom="@dimen/elevation"
                              android:layout_marginEnd="@dimen/marginleft"
                              android:layout_marginRight="@dimen/marginleft"
                              android:layout_marginLeft="@dimen/marginleft"
                              android:layout_marginStart="@dimen/marginleft"
                              android:gravity="center_vertical"
                              android:drawableLeft="@drawable/smalliconsuggested"
                              android:textColor="@color/activeTextColor"
                              android:layout_height="wrap_content"/>

                    <TextView android:layout_width="58dp"
                              android:text="High"
                              android:layout_toLeftOf="@+id/cmpltdclslayout"
                              android:layout_toStartOf="@+id/cmpltdclslayout"
                              android:fontFamily="sans-serif"
                              android:id="@+id/high"
                              android:layout_marginTop="@dimen/space_8"
                              android:gravity="center"
                              android:padding="3dp"
                              android:textSize="@dimen/font_small"
                              android:textColor="@color/white"
                              android:backgroundTint="@color/colorPrimary"
                              android:background="@drawable/buttonbg"
                              android:layout_marginEnd="@dimen/spacing_rating"
                              android:layout_marginRight="@dimen/spacing_rating"
                              android:layout_height="wrap_content"/>

                    <RelativeLayout android:layout_width="wrap_content"
                                    android:id="@+id/cmpltdclslayout"
                                    android:layout_marginTop="@dimen/space_8"
                                    android:background="@drawable/buttonbg"
                                    android:backgroundTint="@color/greentb"
                                    android:layout_marginEnd="@dimen/elevation"
                                    android:layout_marginRight="@dimen/elevation"
                                    android:layout_alignParentRight="true"
                                    android:layout_height="wrap_content">
                        <TextView android:layout_width="45dp"
                                  android:text="Closed"
                                  android:gravity="center"
                                  android:fontFamily="sans-serif"
                                  android:padding="3dp"
                                  android:layout_centerHorizontal="true"
                                  android:layout_centerVertical="true"
                                  android:textSize="@dimen/font_small"
                                  android:id="@+id/closed"
                                  android:visibility="gone"
                                  android:textColor="@color/white"
                                  android:layout_height="wrap_content"/>
                        <TextView android:layout_width="65dp"
                                  android:text="Completed"
                                  android:gravity="center"
                                  android:fontFamily="sans-serif"
                                  android:padding="3dp"
                                  android:id="@+id/completed"
                                  android:layout_centerHorizontal="true"
                                  android:layout_centerVertical="true"
                                  android:textSize="@dimen/font_small"
                                  android:textColor="@color/white"
                                  android:layout_height="wrap_content"/>

                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_marginTop="2dp"
                                android:elevation="@dimen/elevtion"
                                android:layout_marginBottom="2dp"
                                android:backgroundTint="@color/white"
                                android:background="@drawable/drawable_edittext_style"
                                android:layout_height="wrap_content">

                    <Button
                            android:id="@+id/rp"
                            style="@style/EditTextStyle"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="@dimen/marginleft"
                            android:elevation="@dimen/elevtion"
                            android:layout_weight="1"
                            android:drawableEnd="@drawable/arrowwhite"
                            android:drawableRight="@drawable/arrowwhite"
                            android:textColorHint="@android:color/white"
                            android:hint="Required Part"
                            android:layout_marginTop="4dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:background="@drawable/yellowboxbg"
                            android:textSize="@dimen/font_small"
                            android:gravity="center_horizontal|center_vertical"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="90dp"/>


                    <TextView
                            android:id="@+id/standard_part"
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:textColor="@color/black"
                            android:layout_marginTop="50dp"
                            android:textSize="15dp"
                            android:text="Standard Part"/>
                    <TextView
                            android:id="@+id/part_name"
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:textSize="15dp"
                            android:layout_below="@+id/standard_part"
                            android:text="Part Name"/>
                    <TextView
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="80dp"
                            android:textSize="15dp"
                            android:layout_marginLeft="130dp"
                            android:text="Quantity"
                            android:layout_toRightOf="@+id/part_name"/>
                    <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_below="@id/part_name"
                            android:id="@+id/part_namerecyclerview"
                            android:layout_marginTop="@dimen/marginleft"
                            android:layout_marginBottom="@dimen/marginleft"
                            android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:elevation="2dp"
                                android:backgroundTint="@color/white"
                                android:background="@drawable/drawable_edittext_style">

                    <TextView
                            android:id="@+id/order_part"
                            android:layout_width="130dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:textSize="12dp"
                            android:text="Order Part"/>



                    <TextView
                            android:id="@+id/part_name1"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_below="@id/order_part"
                            android:textColor="@color/activeTextColor"
                            android:textSize="8dp"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:layout_marginTop="2dp"
                            android:text="Part Name"/>
                    <TextView
                            android:id="@+id/quantity1"
                            android:layout_width="40dp"
                            android:layout_height="25dp"
                            android:layout_below="@id/order_part"
                            android:textColor="@color/activeTextColor"
                            android:textSize="8dp"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:layout_toRightOf="@id/part_name1"
                            android:layout_marginTop="2dp"
                            android:text="Quantity"/>
                    <TextView
                            android:id="@+id/available_quantity"
                            android:layout_width="40dp"
                            android:layout_height="25dp"
                            android:layout_below="@id/order_part"
                            android:textColor="@color/activeTextColor"
                            android:textSize="8dp"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:layout_toRightOf="@id/quantity1"
                            android:layout_marginTop="2dp"
                            android:text="Need Date"/>
                    <TextView
                            android:id="@+id/need_date"
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:layout_below="@id/order_part"
                            android:textColor="@color/activeTextColor"
                            android:textSize="8dp"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:layout_toRightOf="@id/available_quantity"
                            android:layout_marginTop="2dp"
                            android:text="Description"/>
                    <TextView
                            android:id="@+id/comment1"
                            android:layout_width="40dp"
                            android:layout_height="25dp"
                            android:layout_below="@id/order_part"
                            android:textColor="@color/activeTextColor"
                            android:textSize="8dp"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:layout_toRightOf="@id/need_date"
                            android:layout_marginTop="2dp"
                            android:text="Status"/>
                    <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/maintenanceorderpart_recyclerview"
                            android:layout_marginTop="80dp"
                            android:layout_below="@+id/part_name1">

                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>


                    <View android:layout_width="match_parent"
                          android:layout_marginTop="@dimen/elevtion"
                          android:layout_marginLeft="@dimen/marginleft"
                          android:layout_marginEnd="@dimen/marginleft"
                          android:layout_marginRight="@dimen/marginleft"
                          android:id="@+id/view5"
                          android:layout_marginStart="@dimen/marginleft"
                          android:background="@color/inactiveTxtColor"
                          android:layout_below="@+id/camshaft1"
                          android:layout_height="1dp"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:elevation="2dp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/drawable_edittext_style">
                    <TextView
                            android:id="@+id/custom_part"
                            android:layout_width="130dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:textColor="@color/black"
                            android:layout_marginTop="20dp"
                            android:textSize="15dp"
                            android:text="Custom Part"/>
                    <TextView
                            android:id="@+id/part_name2"
                            android:layout_width="40dp"
                            android:layout_height="25dp"
                            android:layout_below="@id/custom_part"
                            android:textColor="@color/activeTextColor"
                            android:textSize="8dp"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:layout_marginTop="2dp"
                            android:text="Part Name"/>
                    <TextView
                            android:id="@+id/quantity3"
                            android:layout_width="40dp"
                            android:layout_height="25dp"
                            android:layout_below="@id/custom_part"
                            android:textColor="@color/activeTextColor"
                            android:textSize="8dp"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:layout_toRightOf="@id/part_name2"
                            android:layout_marginTop="2dp"
                            android:text="Quantity"/>
                    <TextView
                            android:id="@+id/available_quantity2"
                            android:layout_width="40dp"
                            android:layout_height="25dp"
                            android:layout_below="@id/custom_part"
                            android:textColor="@color/activeTextColor"
                            android:textSize="8dp"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:layout_toRightOf="@id/quantity3"
                            android:layout_marginTop="2dp"
                            android:text="Need Date"/>
                    <TextView
                            android:id="@+id/need_date2"
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:layout_below="@id/custom_part"
                            android:textColor="@color/activeTextColor"
                            android:textSize="8dp"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:layout_toRightOf="@id/available_quantity2"
                            android:layout_marginTop="2dp"
                            android:text="Description"/>
                    <TextView
                            android:id="@+id/comment2"
                            android:layout_width="40dp"
                            android:layout_height="25dp"
                            android:layout_below="@id/custom_part"
                            android:textColor="@color/activeTextColor"
                            android:textSize="8dp"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:layout_toRightOf="@id/need_date2"
                            android:layout_marginTop="2dp"
                            android:text="Status"/>

                    <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/maintenancecustompart_recyclerview"
                            android:layout_below="@+id/part_name2"
                            android:layout_marginTop="20dp">

                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
                    <View android:layout_width="match_parent"
                          android:layout_marginTop="@dimen/elevtion"
                          android:layout_marginLeft="@dimen/marginleft"
                          android:layout_marginEnd="@dimen/marginleft"
                          android:layout_marginRight="@dimen/marginleft"
                          android:id="@+id/view6"
                          android:layout_marginStart="@dimen/marginleft"
                          android:background="@color/inactiveTxtColor"
                          android:layout_below="@+id/camshaft2"
                          android:layout_height="1dp"/>
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:elevation="@dimen/elevation"
                              android:layout_marginTop="@dimen/marginleft"
                              android:background="@color/white"
                              android:layout_height="wrap_content">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                        <Button
                                android:id="@+id/update"
                                style="@style/EditTextStyle"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:layout_marginBottom="@dimen/marginleft"
                                android:elevation="@dimen/elevtion"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:textColorHint="@android:color/white"
                                android:hint="Update"
                                android:textSize="@dimen/font_small"
                                android:backgroundTint="@color/greentb"
                                android:background="@drawable/yellowboxbg"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"/>

                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:gravity="start"
                                  android:id="@+id/cmnttitle"
                                  android:layout_marginLeft="@dimen/marginleft"
                                  android:layout_marginStart="@dimen/marginleft"
                                  android:textSize="@dimen/font_small"
                                  android:layout_marginTop="40dp"
                                  android:layout_marginEnd="@dimen/marginleft"
                                  android:layout_marginRight="@dimen/marginleft"
                                  android:textStyle="bold"
                                  android:textColor="@android:color/black"
                                  android:text="Comment"
                                  android:fontFamily="sans-seri"/>

                        <View android:layout_width="30dp"
                              android:id="@+id/profile"
                              android:layout_below="@+id/cmnttitle"
                              android:background="@drawable/circularbg"
                              android:backgroundTint="@color/inactiveTxtColor"
                              android:layout_marginTop="@dimen/marginleft"
                              android:layout_marginLeft="@dimen/marginleft"
                              android:layout_height="30dp"/>
                        <TextView android:layout_width="match_parent"
                                  android:text="You"
                                  android:fontFamily="sans-serif"
                                  android:id="@+id/u"
                                  android:textSize="@dimen/font_small"
                                  android:maxLines="1"
                                  android:layout_marginTop="@dimen/marginleft"
                                  android:layout_toRightOf="@+id/profile"
                                  android:layout_toEndOf="@+id/profile"
                                  android:layout_marginEnd="@dimen/marginleft"
                                  android:layout_marginRight="@dimen/marginleft"
                                  android:layout_marginLeft="@dimen/marginleft"
                                  android:layout_below="@+id/cmnttitle"
                                  android:layout_marginStart="@dimen/marginleft"
                                  android:gravity="center_vertical"
                                  android:textColor="@color/activeTextColor"
                                  android:layout_height="wrap_content"/>

                        <EditText android:layout_width="match_parent"
                                  android:layout_below="@+id/u"
                                  android:layout_marginRight="@dimen/marginleft"
                                  android:layout_marginLeft="@dimen/marginleft"
                                  android:layout_toRightOf="@+id/profile"
                                  android:id="@+id/et_comment"
                                  android:textSize="@dimen/font_small"
                                  android:hint="write your comment here.."
                                  android:layout_toEndOf="@+id/profile"
                                  android:layout_height="33dp"/>

                        <TextView android:layout_width="45dp"
                                  android:text="Post"
                                  android:fontFamily="sans-serif"
                                  android:id="@+id/post"
                                  android:gravity="center"
                                  android:layout_below="@+id/et_comment"
                                  android:layout_alignParentRight="true"
                                  android:layout_alignParentEnd="true"
                                  android:layout_marginTop="@dimen/elevation"
                                  android:padding="3dp"
                                  android:textSize="@dimen/font_small"
                                  android:textColor="@color/white"
                                  android:backgroundTint="@color/colorPrimary"
                                  android:background="@drawable/buttonbg"
                                  android:layout_marginEnd="@dimen/marginleft"
                                  android:layout_marginRight="@dimen/marginleft"
                                  android:layout_height="25dp"/>
                        <TextView android:layout_width="wrap_content"
                                  android:text="Attach"
                                  android:fontFamily="sans-serif"
                                  android:id="@+id/attach_file"
                                  android:gravity="center"
                                  android:layout_below="@+id/et_comment"
                                  android:layout_marginTop="4dp"
                                  android:padding="3dp"
                                  android:drawableTint="@color/colorPrimary"
                                  android:drawableLeft="@drawable/attach"
                                  android:layout_marginStart="12dp"
                                  android:layout_marginLeft="12dp"
                                  android:textSize="@dimen/font_small"
                                  android:textColor="@color/colorPrimary"
                                  android:layout_toRightOf="@+id/profile"
                                  android:layout_toEndOf="@+id/profile"
                                  android:background="@drawable/buttonbg"
                                  android:layout_marginEnd="@dimen/spacing_rating"
                                  android:layout_marginRight="@dimen/spacing_rating"
                                  android:layout_height="25dp"/>
                        <android.support.v7.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_below="@+id/attach_file"
                                android:id="@+id/commentrecyclerview"
                                android:layout_marginTop="@dimen/marginleft"
                                android:layout_marginBottom="@dimen/marginleft"
                                android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>