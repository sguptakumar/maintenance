<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp">
<RelativeLayout android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/font_small"
                android:layout_marginRight="@dimen/marginleft"
                android:layout_marginLeft="@dimen/marginleft">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:src="@drawable/profile"
                    android:id="@+id/profile"
                    android:layout_height="40dp"/>
    <TextView android:layout_width="match_parent"
              android:text="Dhiraj Pandey"
              android:fontFamily="sans-serif"
              android:id="@+id/name"
              android:layout_toRightOf="@+id/profile"
              android:layout_toEndOf="@+id/profile"
              android:textSize="@dimen/font_small"
              android:maxLines="1"
              android:textStyle="bold"
              android:layout_toLeftOf="@+id/date"
              android:layout_toStartOf="@+id/date"
              android:layout_marginEnd="@dimen/marginleft"
              android:layout_marginRight="@dimen/marginleft"
              android:layout_marginLeft="@dimen/marginleft"
              android:layout_marginStart="@dimen/marginleft"
              android:textColor="@color/black"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="80dp"
              android:text="20-09-2019"
              android:fontFamily="sans-serif"
              android:id="@+id/date"
              android:gravity="end"
              android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true"
              android:textSize="@dimen/font_small"
              android:layout_marginRight="@dimen/marginleft"
              android:maxLines="1"
              android:textColor="@color/activeTextColor"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="match_parent"
              android:text="letters, as opposed to using 'Content here, content here', making it look like readable English."
              android:fontFamily="sans-serif"
              android:id="@+id/comment"
              android:layout_toEndOf="@+id/profile"
              android:layout_toRightOf="@+id/profile"
              android:gravity="start"
              android:layout_marginTop="@dimen/elevation"
              android:layout_below="@+id/name"
              android:layout_marginLeft="@dimen/marginleft"
              android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true"
              android:textSize="@dimen/font_small"
              android:layout_marginRight="@dimen/marginleft"
              android:maxLines="2"
              android:textColor="@color/activeTextColor"
              android:layout_height="wrap_content"/>



</RelativeLayout>
</RelativeLayout>