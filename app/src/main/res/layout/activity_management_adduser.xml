<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backdroundbg"
        tools:context=".operation_manager.activity.AddBreakDownRequestActivity">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_marginBottom="@dimen/marginleft"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:layout_marginTop="60dp">
            <EditText
                    android:id="@+id/activity_add_user_firstname"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="40dp"
                    android:elevation="@dimen/elevtion"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/textviewbg"
                    android:drawableLeft="@drawable/name"
                    android:drawableStart="@drawable/name"
                    android:hint="First Name" />
            <EditText
                    android:id="@+id/activity_add_user_lastname"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="40dp"
                    android:elevation="@dimen/elevtion"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/textviewbg"
                    android:drawableLeft="@drawable/name"
                    android:drawableStart="@drawable/name"
                    android:hint="Last Name" />
            <EditText
                    android:id="@+id/activity_add_user_email"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/marginleft"
                    android:elevation="@dimen/elevtion"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/textviewbg"
                    android:drawableLeft="@drawable/email"
                    android:drawableStart="@drawable/email"
                    android:hint="Email" />
            <EditText
                    android:id="@+id/activity_add_user_call"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/marginleft"
                    android:elevation="@dimen/elevtion"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/textviewbg"
                    android:drawableLeft="@drawable/call"
                    android:drawableStart="@drawable/call"
                    android:hint="Mobile No" />
            <EditText
                    android:id="@+id/activity_add_user_password"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/marginleft"
                    android:elevation="@dimen/elevtion"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/textviewbg"
                    android:drawableLeft="@drawable/password"
                    android:drawableStart="@drawable/password"
                    android:hint="Password" />
            <TextView
                    android:id="@+id/activity_management_upload_image"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/marginleft"
                    android:elevation="@dimen/elevtion"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/textviewbg"
                    android:drawableLeft="@drawable/camera"
                    android:drawableStart="@drawable/camera"
                    android:hint="Upload your image" />
        </LinearLayout>
    <Button android:layout_width="200dp"
            android:id="@+id/activity_add_user_submit"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="85dp"
            android:background="@drawable/buttonbg"
            android:backgroundTint="@color/colorPrimary"
            android:text="Submit"
            android:textColor="@color/white"
            android:elevation="@dimen/elevtion"
            android:layout_alignParentBottom="true"
            android:layout_height="40dp"
            android:gravity="center"/>
</RelativeLayout>