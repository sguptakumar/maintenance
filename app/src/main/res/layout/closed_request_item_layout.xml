<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/marginleft"
            android:layout_marginLeft="@dimen/marginleft"
            android:background="@drawable/yellowboxbg1"
            android:elevation="@dimen/elevtion"
            android:backgroundTint="@color/white"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_height="142dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_marginRight="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_rating"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_height="match_parent">
            <TextView
                    android:layout_width="match_parent"
                    android:text="Request Id: 36429"
                    android:fontFamily="sans-serif"
                    android:id="@+id/closed_req_id"
                    android:textSize="@dimen/font_small"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/activeTextColor"
                    android:layout_toLeftOf="@+id/closed_req_close"
                    android:layout_toStartOf="@+id/closed_req_close"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_width="58dp"
                    android:text="High"
                    android:layout_toLeftOf="@+id/closed_req_cmpltdclslayout"
                    android:layout_toStartOf="@+id/closed_req_cmpltdclslayout"
                    android:fontFamily="sans-serif"
                    android:id="@+id/closed_req_close"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/elevtion"
                    android:padding="3dp"
                    android:textSize="@dimen/font_small"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@drawable/buttonbg"
                    android:layout_marginEnd="@dimen/spacing_rating"
                    android:layout_marginRight="@dimen/spacing_rating"
                    android:layout_height="wrap_content"/>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/closed_req_cmpltdclslayout"
                    android:layout_marginTop="@dimen/elevtion"
                    android:background="@drawable/buttonbg"
                    android:backgroundTint="@color/green"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="45dp"
                        android:text="Closed"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:padding="3dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_small"
                        android:id="@+id/closed_req_closed"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_width="65dp"
                        android:text="Completed"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:padding="3dp"
                        android:id="@+id/closed_req_completed"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_small"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:text="M/c No.: 36429"
                    android:layout_below="@+id/closed_req_id"
                    android:fontFamily="sans-serif"
                    android:id="@+id/closed_req_machineno"
                    android:textSize="@dimen/font_small"
                    android:textColor="@color/activeTextColor"
                    android:layout_toLeftOf="@+id/closed_req_close"
                    android:layout_toStartOf="@+id/closed_req_close"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_width="match_parent"
                    android:text="Machine is not working properly."
                    android:layout_below="@+id/closed_req_machineno"
                    android:fontFamily="sans-serif"
                    android:id="@+id/closed_req_comnt"
                    android:textSize="@dimen/font_small"
                    android:maxLines="1"
                    android:textColor="@color/activeTextColor"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_width="match_parent"
                    android:text="Created Date : 10/02/2019, 04:18 "
                    android:layout_below="@+id/closed_req_comnt"
                    android:fontFamily="sans-serif"
                    android:id="@+id/closed_req_create_date"
                    android:textSize="@dimen/font_small"
                    android:maxLines="1"
                    android:textColor="@color/activeTextColor"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_width="match_parent"
                    android:text="Completion Date : 10/02/2019, 04:18 "
                    android:layout_below="@+id/closed_req_create_date"
                    android:fontFamily="sans-serif"
                    android:id="@+id/closed_req_complete_date"
                    android:textSize="@dimen/font_small"
                    android:maxLines="1"
                    android:textColor="@color/activeTextColor"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="match_parent"
                    android:text="Dhiraj Pandey"
                    android:layout_below="@+id/closed_req_complete_date"
                    android:fontFamily="sans-serif"
                    android:id="@+id/closed_req_name"
                    android:textSize="@dimen/font_small"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/user"
                    android:textColor="@color/activeTextColor"
                    android:layout_height="wrap_content"/>
            <TextView android:layout_width="match_parent"
                      android:text="Suggested Part- bearing, roller, shaft"
                      android:layout_below="@+id/closed_req_name"
                      android:fontFamily="sans-serif"
                      android:id="@+id/closed_req_suggestedpart"
                      android:textSize="@dimen/font_small"
                      android:maxLines="1"
                      android:gravity="center_vertical"
                      android:drawableLeft="@drawable/smalliconsuggested"
                      android:textColor="@color/activeTextColor"
                      android:layout_height="wrap_content"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>