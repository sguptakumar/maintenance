<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yellowboxbg"
        android:backgroundTint="@color/bgcolor">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/alert_dialog_recyclerView"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/dialogsubmit"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="Submit"
                android:backgroundTint="@color/greentb"
                android:background="@drawable/yellowboxbg"
                android:layout_marginLeft="2dp"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"/>
        <Button
                android:id="@+id/dialogcancel"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/yellowboxbg"
                android:backgroundTint="@color/colorPrimary"
                android:text="Cancel"
                android:layout_toRightOf="@+id/dialogsubmit"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="200dp"
                android:layout_alignRight="@+id/dialogsubmit"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"/>
    </RelativeLayout>
</RelativeLayout>