<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
    <ImageView
            android:id="@+id/camshaftpix"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/part_name1"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:background="@drawable/camshaft"/>
    <TextView
            android:id="@+id/camshaft1"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_below="@id/camshaftpix"
            android:textColor="@color/activeTextColor"
            android:textSize="7dp"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="2dp"
            android:text="camshaft"/>
    <TextView
            android:id="@+id/quantity2"
            android:layout_width="8dp"
            android:layout_height="10dp"
            android:layout_below="@id/quantity1"
            android:textColor="@color/activeTextColor"
            android:textSize="7dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="4dp"
            android:text="2"/>

    <TextView
            android:id="@+id/need_date1"
            android:layout_width="40dp"
            android:layout_height="10dp"
            android:layout_below="@id/need_date"
            android:textColor="@color/activeTextColor"
            android:textSize="7dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="4dp"
            android:text="14-1-2019"/>
    <TextView
            android:id="@+id/lorel_ishpum"
            android:layout_width="45dp"
            android:layout_height="10dp"
            android:layout_below="@id/need_date"
            android:textColor="@color/activeTextColor"
            android:textSize="7dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="4dp"
            android:text="Lorel ishpum"/>
    <TextView
            android:id="@+id/read_more"
            android:layout_width="45dp"
            android:layout_height="10dp"
            android:layout_below="@id/lorel_ishpum"
            android:textColor="@color/colorPrimary"
            android:textSize="5dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="2dp"
            android:text="Read More"/>


    <ImageView
            android:id="@+id/eye"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:layout_below="@id/status"
            android:layout_marginLeft="250dp"
            android:background="@drawable/eye"/>
    <TextView
            android:id="@+id/pending"
            android:layout_width="40dp"
            android:layout_height="10dp"
            android:layout_below="@id/eye"
            android:textColor="@color/activeTextColor"
            android:textSize="7dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="4dp"
            android:text="Pending"/>
    </RelativeLayout>

</LinearLayout>
